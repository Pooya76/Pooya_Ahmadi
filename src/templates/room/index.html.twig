{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}


    <form action="{{path('app_room_create')}}" method="post">
        <select id="allHotel" name="allHotel">
            {% for hotel in hotels %}
                <option value="{{hotel.id}}">{{hotel.name}}</option>
            {% endfor%}
        </select>
        <br>
        <input type="number" placeholder="bed size" id="bedSize" name="bedSize">
        <br>
        <label for="roomStatus"> Available</label>
        <input type="checkbox" id="roomStatus" name="roomStatus">
        <br>
        <input type="number" placeholder="price" id="price" name="price">
        <br>
        <input type="submit" value="create">

    </form>
{% endblock %}

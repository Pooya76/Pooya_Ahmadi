{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <form action="{{path('app_room_view', { 'id':room.id}) }}" method="post">
        <select id="allHotel" name="allHotel">
            {% for hotel in hotels %}
                <option value="{{hotel.id}}">{{hotel.name}}</option>
            {% endfor%}
        </select>
        <br>
        <input type="number" value="{{room.bedSize}}" id="bedSize" name="bedSize">
        <br>
        <label for="roomStatus"> Available</label>
        <input type="checkbox" value="{{room.isEmpty}}" id="roomStatus" name="roomStatus">
        <br>
        <input type="number" value="{{room.price}}" id="price" name="price">
        <br>
        <input type="submit" value="update">

    </form>
{% endblock %}
